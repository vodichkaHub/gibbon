<launch>
    <arg name="gibbon_model" default="$(find gibbon)/urdf/gibbon.xacro"/>
    <arg name="rvizconfig" default="$(find gibbon)/rviz/basic.rviz"/>

    <param name="robot_description" command="$(find xacro)/xacro $(arg gibbon_model)" />
    <!-- <node pkg="tf" type="static_transform_publisher" name="base_link_broadcaster" args="0 0 0 0 0 0 1 map base_link 100" /> -->
    
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
    
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
</launch>